<div class="row">
  <div class="col-md-12">
    <h2> <%= @article.title %> </h2>

    <p>
      <%= @markdown.render(@article.body).html_safe %>
    </p>
  </div>
</div>

<% if user_signed_in? %>
  <% if @article.user_id == current_user.id %>
    <%= link_to 'Edit', edit_article_path(@article) %> |
    <%= link_to 'Delete', article_path, method: :delete, data: {confirm: "Are you sure you want to delete article #{@article.title}"} %> |
    <%= link_to 'Back', articles_path %>
  <% end %>
<% end %>

<hr>

<h3>Comments: </h3>

<%= render @article.comments %>

<% if user_signed_in? %>
  <%= render 'comments/form' %>
<% end %>
