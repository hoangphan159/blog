<p> <%= comment.content %> </p>
<p class="float-right font-italic"><%= time_ago_in_words(comment.created_at) %> - <%= comment.user.email %></p>

<% if user_signed_in? %>
  <% if comment.user_id == current_user.id %>
    <%= link_to 'Edit', edit_article_comment_path(comment.article, comment), class: "btn btn-success" %>
    <%= link_to 'Delete', article_comment_path(comment.article, comment), method: :delete, data: {confirm: "Do you want to delete this comment?"} %>
  <% end %>

  <hr>
<% end %>
